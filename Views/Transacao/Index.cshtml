@{
    ViewData["Title"] = "Listagem de transação";
}

<button type="button" class="btn btn-block btn-primary" onclick="Adicionar()">Registrar transações</button>
<br /><br />

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Historico</th>
        <th>Tipo</th>
        <th>Valor</th>
        <th>Data</th>
        <th>#</th>
        <th>#</th>
    </tr>

    @{
        foreach (var item in (List<TransacaoModel>)ViewBag.ListaTransacao)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Historico</td>
                <td>@item.Tipo</td>
                <td>@item.Valor</td>
                <td>@item.Data</td>
                <td><button type="button" class="btn btn-block btn-outline-warning"
                        onclick="Editar(@item.Id.ToString())">Editar</button></td>
                <td><button type="button" class="btn btn-block btn-outline-danger"
                        onclick="Excluir(@item.Id.ToString())">Excluir</button></td>
            </tr>
        }
    }
</table>

<script>
    function Adicionar() {
        console.log("Adicionar: ");
        window.location.href = "./Cadastro"
    }
    function Editar(id) {
        console.log("Editar: ", id);
        window.location.href = "./Cadastro/" + id;
    }
    function Excluir(id) {
        console.log("Excluir: ", id);
        window.location.href = "./Excluir/" + id;
    }
</script>